{
  "version": 2,
  "builds": [
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "server/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/api/index.js" },
    { "src": "/uploads/(.*)", "dest": "server/api/index.js" },
    { "src": "/(.*)", "dest": "/Client/build/index.html" }
  ]
}